<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script>
        function setDefaultSize() {
            var headerHeight = 180;
            var footerHeight = 50;
            var sizePage = window.innerHeight;
            var sizeBody = sizePage - (headerHeight + footerHeight);
            $(".body-sidca").css({ height: sizeBody })
            //document.getElementsByClass("body-sidca").style.minHeight = sizeBody+"px";
        }
    </script>
</head>
<body onload=" setDefaultSize()">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Início", "Index", "Home")</li>
                    <li>@Html.ActionLink("Sobre", "About", "Home")</li>
                    <li>@Html.ActionLink("Contato", "Contact", "Home")</li>
                </ul>
                <p class="nav navbar-text navbar-right">Olá, @User.Identity.Name!</p>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <header style="height:100px ;">
            <div class="row">
                <h1 class="col-md-3">
                    @*@Html.ActionLink("Sidca", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                    @Html.ActionLink("Sidca", "Index", "Home")
                </h1>
                <h2 class="col-md-9">Complemento de Cadastro de Expediente</h2>
            </div>
            <ul class="header-sidca nav nav-tabs">
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="javascript:;">
                        Pendentes
                        <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                        <li>
                            @Html.ActionLink("Importação", "Index", "Importacao")
                        </li>
                        <li>
                            @Html.ActionLink("Acervo", "Index", "PendentesAcervo")
                        </li>
                        <li>
                            @Html.ActionLink("Cadastro", "Index", "PendentesCadastro")
                        </li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="javascript:;">
                        Finalizados
                        <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                        <li>
                            @Html.ActionLink("Acervo", "Index", "FinalizadoAcervo")
                        </li>
                        <li>
                            @Html.ActionLink("Cadastro", "Index", "FinalizadoCadastro")
                        </li>
                    </ul>
                </li>
            </ul>
        </header>
        <section class="body-sidca ">
            @RenderBody()
        </section>
        <hr />
        <footer class="row" style="height:30px ;">
            <div class="col-sm-6">Etapa Processo</div>
            <div class="col-sm-6">&copy; @DateTime.Now.Year - Desenvolvido por: Miquéias M.Sousa</div>
        </footer>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
